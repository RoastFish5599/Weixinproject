/* pages/music/music.wxss */
.music {
  background:rgba(0,0,0,0.7);
  color:white;
  height:100%;
  width:100%;
  padding:150rpx 0 350rpx 0;
}
.music-msg {
  height:50rpx;
  width:90%;
  margin-left:7%;
  margin-top:5rpx;
}

.music-msg .msg-name {
  text-align: center;
}

.music-msg .msg-author {
  text-align:center;
}

.buttons {
  margin-top:20%;
  background:#ddd;
  position: relative;
}

.buttons .button {
  width:50rpx;
  height:50rpx;
  position: absolute;
}

.opr {
  height:50rpx;
  margin-top:77.5%;
  position: relative;
}

.opr .share {
  position: absolute;
  left:160rpx;
}
.opr .love{
  position: absolute;
  right:160rpx;
}